log4j.rootLogger=DEBUG,Xstream

# set the appender named X to b a console appender

log4j.appender.Xstream=org.apache.log4j.ConsoleAppender

# set layout
log4j.appender.Xstream=com.ibm.streamsx.log4j.StreamsAppender
log4j.appender.Xstream.layout=org.apache.log4j.PatternLayout
#log4j.appender.Xstream.layout.conversionPattern=logger:%C date:%d file:%F Location:%l Line:%L Message:%m Method:%s Level:p RTime:%r Thread:%t NDC:%x  
log4j.appender.Xstream.layout.conversionPattern=Client IP ----  NDC:[%x] MDC:[%X{clientIP}]

